<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>PlotQA</jobType>
	<Logger>
		<logLevel>info</logLevel>
	</Logger>

	<PlotQA>
		<Reporter>
			<output url="rpQaRefMult.pdf" width="600" height="500" />
		</Reporter>
		<Logger>
			<logLevel>warning</logLevel>
		</Logger>	

		
		
		<input>
			<!--<data url="/Users/danielbrandenburg/bnl/local/data/RefMultHists/allRefMult.root" />-->
			<!--<data url="/Users/danielbrandenburg/bnl/local/data/BadRunRemoveRefMult/allRefMult.root" />-->
			<data url="/Users/danielbrandenburg/bnl/local/data/RefMultZCorr/allRefMult.root" />
		</input>
		
		<timePeriods>
			<!--<A min="1" max="24" />-->
			<B min="25" max="158" />
			<C min="158" max="735" />
		</timePeriods>
		
		<badRunCuts>
			<bbc sigma="5" />
			<ptPrimary sigma="3.2" />
			<refMult sigma="4" />
			<events min="500" />
		</badRunCuts>

		<output>
			<data>qaRefMult.root</data>
			<report>rpQaRefMult.pdf</report>
		</output>

		<runByRun>
			bbc, 
			ptPrimary,
			refMult,
			zdc,
			nGlobal,
			nPrimary,
			vtxR,
			vtxX,
			vtxY,
			vtxZ,
			etaPrimary,
			tofMult,
			pPrimary
		</runByRun>
		<refMultVersus>
			refMultZ,
			refMultBBC,
			refMultZDC,
			refMultTOF
		</refMultVersus>

		<refMultZ>
			<ranges> -75, -65, -55, -45, -35, -25, -15, -5, 5, 15, 25, 35, 45, 55, 65, 75 </ranges>
			<Reporter>
				<!-- For presentation formatted -->
				<!--<output url="rpZQaRefMult.pdf" width="250" height="250" />-->
				<output url="rpZQaRefMult.pdf" width="600" height="600" />
			</Reporter>
			<fit x1="250" x2="330"/>
		</refMultZ>



		<histograms>
		</histograms>
		<style>
			<profile lineColor="black" markerStyle="9" draw="PE"/>
			<bad lineColor="red" markerColor="red" markerStyle="8" draw="SAME PE"/>
			<bbc title="<BBC>" range="-4000, 6000"  />
			<ptPrimary title="<P_{T} or Primary Tracks>" range="0.2, 0.8" />
			<refMult title="<Ref Mult>" />
			<zdc title="<ZDC>" />
			<nGlobal title="<# Global Tracks>" range="0, 600" />
			<nPrimary title="<# of Primary Tracks>" range="0, 300"/>
			<vtxR title="<R Vertex>" />
			<vtxX title="<X Vertex>" range="-.5, 1"/>
			<vtxY title="<Y Vertex>" range="-1.25, 0.5"/>
			<vtxZ title="<Z Vertex>" range="-100, 100"/>
			<etaPrimary title="<#eta of Primary Tracks>" />
			<pPrimary title="<P of Primary Tracks>" range="0.2, 0.8" />
			<tofMult title="<Tof Mult>" />
			<allRunByRun lineColor="black" markerStyle="8" draw="PE" x="Run Index" numberOfTicks="5, 0, 1" numberOfTicks="5, 0, 2" />

			<refMultZ title="<Ref Mult> vs. Z Vertex" x="Z Vertex [cm]"/>
			<refMultBBC title="<Ref Mult> vs. BBC" x="BBC" range="40, 100" />
			<refMultZDC title="<Ref Mult> vs. ZDC" x="ZDC" domain="0, 45" range="0, 140"/>
			<refMultTOF title="<Ref Mult> vs. TOF Mult" x="TOF Mult"/>
			<allRefMultVersus lineColor="black" markerStyle="8" draw="PE" y="<Ref Mult>" numberOfTicks="5, 0, 1" numberOfTicks="5, 0, 2" />

			<allZProjections x="Ref Mult" logY="0" markerStyle="7" domain="200, 360" numberOfTicks="5, 0, 1" numberOfTicks="5, 0, 2" lineWidth="6" y="Counts"/>

			<zFit title="" x=" Z Bin Center [cm]" y="Max Ref Mult" draw="P" markerStyle="8" range="225, 290" numberOfTicks="8, 0, 1" numberOfTicks="5, 0, 2"/>

		</style>

	</PlotQA>

</config>
